-- Таймер
G2L["e"] = Instance.new("TextLabel", G2L["2"]);
G2L["e"]["TextWrapped"] = true;
G2L["e"]["TextSize"] = 10;
G2L["e"]["FontFace"] = Font.new([[rbxasset://fonts/families/PressStart2P.json]]);
