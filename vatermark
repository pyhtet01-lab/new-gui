-- Дата
G2L["8"] = Instance.new("TextLabel", G2L["2"]);
G2L["8"]["TextWrapped"] = true;
G2L["8"]["TextSize"] = 10;
G2L["8"]["FontFace"] = Font.new([[rbxasset://fonts/families/PressStart2P.json]]);
