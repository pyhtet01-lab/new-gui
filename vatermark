local G2L = {};
local RunService = game:GetService("RunService")

-- StarterGui.водяной знак
G2L["1"] = Instance.new("ScreenGui", game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui"));
G2L["1"]["Enabled"] = true;
G2L["1"]["Name"] = [[водяной знак]];
G2L["1"]["ZIndexBehavior"] = Enum.ZIndexBehavior.Sibling;

-- StarterGui.водяной знак.Frame
G2L["2"] = Instance.new("Frame", G2L["1"]);
G2L["2"]["BorderSizePixel"] = 0;
G2L["2"]["BackgroundColor3"] = Color3.fromRGB(255, 255, 255);
G2L["2"]["Size"] = UDim2.new(0, 150, 0, 25);
G2L["2"]["Position"] = UDim2.new(0, 270, 0, -35);
G2L["2"]["BorderColor3"] = Color3.fromRGB(0, 0, 0);

G2L["3"] = Instance.new("UICorner", G2L["2"]);
G2L["3"]["CornerRadius"] = UDim.new(0, 5);

G2L["4"] = Instance.new("UIStroke", G2L["2"]);
G2L["4"]["Thickness"] = 2;

G2L["5"] = Instance.new("UIGradient", G2L["2"]);
G2L["5"]["Color"] = ColorSequence.new{
    ColorSequenceKeypoint.new(0.000, Color3.fromRGB(33, 7, 55)),
    ColorSequenceKeypoint.new(0.995, Color3.fromRGB(82, 53, 98)),
    ColorSequenceKeypoint.new(0.997, Color3.fromRGB(41, 16, 62)),
    ColorSequenceKeypoint.new(1.000, Color3.fromRGB(139, 125, 150))
};

-- Название
G2L["6"] = Instance.new("TextLabel", G2L["2"]);
G2L["6"]["TextWrapped"] = true;
G2L["6"]["TextSize"] = 12;
G2L["6"]["FontFace"] = Font.new([[rbxasset://fonts/families/PressStart2P.json]]);
G2L["6"]["TextColor3"] = Color3.fromRGB(255, 255, 255);
G2L["6"]["BackgroundTransparency"] = 1;
G2L["6"]["Size"] = UDim2.new(0, 66, 0, 11);
